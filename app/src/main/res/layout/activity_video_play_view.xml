<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context="com.example.administrator.moblieplayer.view.activity.VideoPlayViewActivity">


    <com.example.administrator.moblieplayer.view.ui.VideoView
        android:id="@+id/video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />
    <ImageView
        android:id="@+id/iv_video_play"
        android:visibility="gone"
        android:background="#33000000"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/center_collect_play"/>


    <include layout="@layout/video_controller"
        android:id="@+id/video_controller"/>
    <include layout="@layout/ll_info"
        android:id="@+id/ll_info"/>
    <include layout="@layout/ll_loading"
        android:id="@+id/ll_loading"/>


</RelativeLayout>
